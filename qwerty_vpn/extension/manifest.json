{
  "manifest_version": 3,
  "name": "QwertyStock VPN",
  "version": "1.2.0",
  "description": "VPN proxy manager with domain filtering, VPS status monitoring, and smart load balancing.",
  "permissions": [
    "proxy",
    "storage",
    "alarms",
    "privacy"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
